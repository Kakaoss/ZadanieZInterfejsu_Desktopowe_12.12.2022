<Window x:Class="ZadanieZInterfejsu_Desktopowe_12._12._2022.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadanieZInterfejsu_Desktopowe_12._12._2022"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <DockPanel>
            <WrapPanel HorizontalAlignment="Center" Margin="20px" DockPanel.Dock="Top">
                <Label Content="Travelling Ticketing System" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold"/>
            </WrapPanel>
        
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" DockPanel.Dock="Left">
                <Label Content="Ticket Type"/>
                <Border Background="Black"></Border>
                <RadioButton>Standard</RadioButton>
                <RadioButton>Single Ticket</RadioButton>
            </WrapPanel>
            
        </DockPanel>
    </Grid>
</Window>
